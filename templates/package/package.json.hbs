        "check-types": "tsc --noEmit --skipLibCheck || true",
        "lint": "eslint . --max-warnings 0"
    },
    "dependencies": {},
    "devDependencies": {
        "@repo/eslint-config": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "eslint": "^9.39.1",
        "typescript": "5.9.3"
    }
}
