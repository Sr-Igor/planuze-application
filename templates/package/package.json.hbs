{
    "name": "@repo/{{kebabCase name}}",
    "version": "0.0.0",
    "private": true,
    {{#unless (eq type 'config')}}
    "main": "./src/index.ts",
    "types": "./src/index.ts",
    "type": "module",
    {{#if hasExports}}
    "exports": {
        ".": "./src/index.ts"
    },
    {{/if}}
