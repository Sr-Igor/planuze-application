{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react-jsx",
        "paths": {
            "#/*": [
                "./src/*"
            ]
        },
        "skipLibCheck": true,
        "noEmit": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ES2023",
        "lib": [
            "ES2023"
        ]
    },
    "include": [
        "src/**/*",
        "scripts/**/*"
    ],
    "exclude": [
        "node_modules",
        "locales"
    ]
}