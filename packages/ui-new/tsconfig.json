{
    "extends": "@repo/typescript-config/react-library.json",
    "compilerOptions": {
        "baseUrl": ".",
        "lib": [
            "ES2023",
            "DOM",
            "DOM.Iterable"
        ],
        "paths": {
            "@core/*": [
                "./src/core/*"
            ],
            "@application/*": [
                "./src/application/*"
            ],
            "@infrastructure/*": [
                "./src/infrastructure/*"
            ],
            "@presentation/*": [
                "./src/presentation/*"
            ],
            "@shared/*": [
                "./src/shared/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}