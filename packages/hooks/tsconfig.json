{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2023",
    "lib": [
      "ES2023",
      "DOM"
    ],
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}