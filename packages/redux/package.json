{
    "name": "@repo/redux",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "exports": {
        "./provider": {
            "types": "./src/provider/index.tsx",
            "default": "./src/provider/index.tsx"
        },
        "./hook": {
            "types": "./src/hook/index.ts",
            "default": "./src/hook/index.ts"
        },
        "./store": {
            "types": "./src/store/index.ts",
            "default": "./src/store/index.ts"
        },
        "./store/modules/*": {
            "types": "./src/store/modules/*.ts",
            "default": "./src/store/modules/*.ts"
        }
    },
    "scripts": {
        "check-types": "tsc --noEmit --skipLibCheck || true",
        "lint": "eslint . --max-warnings 0"
    },
    "dependencies": {
        "@repo/types": "workspace:*",
        "@repo/cookies": "workspace:*",
        "@reduxjs/toolkit": "^1.9.7",
        "react-redux": "^8.1.3",
        "redux": "^4.2.1",
        "redux-persist": "^6.0.0",
        "redux-saga": "^1.4.2"
    },
    "devDependencies": {
        "@repo/eslint-config": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "eslint": "^9.39.1",
        "typescript": "5.9.3",
        "@types/redux-mock-store": "^1.5.0",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "redux-mock-store": "^1.5.5"
    }
}