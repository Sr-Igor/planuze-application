{
  "name": "@repo/redux",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./provider": {
      "types": "./src/provider/index.tsx",
      "default": "./src/provider/index.tsx"
    },
    "./hooks": {
      "types": "./src/hooks/index.ts",
      "default": "./src/hooks/index.ts"
    },
    "./store": {
      "types": "./src/store/index.ts",
      "default": "./src/store/index.ts"
    },
    "./store/modules/*": {
      "types": "./src/store/modules/*.ts",
      "default": "./src/store/modules/*.ts"
    }
  },
  "scripts": {
    "check-types": "tsc --noEmit --skipLibCheck || true",
    "lint": "eslint . --max-warnings 0"
  },
  "peerDependencies": {
    "react": "catalog:",
    "next": "catalog:",
    "react-dom": "catalog:",
    "date-fns": "catalog:"
  },
  "dependencies": {
    "@repo/types": "workspace:*",
    "@repo/cookies": "workspace:*",
    "@reduxjs/toolkit": "catalog:",
    "react-redux": "catalog:",
    "redux": "catalog:",
    "redux-persist": "catalog:",
    "redux-saga": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "eslint": "catalog:",
    "typescript": "catalog:",
    "@types/redux-mock-store": "^1.5.0",
    "prettier-plugin-tailwindcss": "catalog:",
    "redux-mock-store": "^1.5.5"
  }
}
