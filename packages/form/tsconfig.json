{
    "extends": "@repo/typescript-config/react-library.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "noEmit": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "target": "ES2023",
        "baseUrl": ".",
        "paths": {
            "#/*": [
                "./src/*"
            ]
        },
        "lib": [
            "ES2023",
            "DOM"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}